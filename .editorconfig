# *已经是顶层配置文件，不必继续向上搜索
# *置为true表示根目录，控制配置文件 .editorconfig 是否生效的字段，
root = true

# *匹配全部文件，匹配除了 `/` 路径分隔符之外的任意字符串
[*]
# *缩进风格，可选space｜tab
indent_style = space
# *设置缩进的大小，即缩进的列数，当 indexstyle 取值 tab 时，indentsize 会使用 tab_width 的值
indent_size = 2
# *设置使用的换行符，取值为 lf，cr 或者 crlf
end_of_line = lf
# *设置字符编码，取值为 latin1，utf-8，utf-8-bom，utf-16be 和 utf-16le，当然 utf-8-bom 不推荐使用
charset = utf-8
# *删除一行中的前后空格
trim_trailing_whitespace = true
# *设为true表示使文件以一个空白行结尾
insert_final_newline = true

# *匹配全部 .md 文件
[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
